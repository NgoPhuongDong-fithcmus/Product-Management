extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-error("5000")
    +alert-success("5000")
    h1(class="mb-4") Chỉnh sửa thông tin cá nhân


    form(
        action=`${prefixAdmin}/my-account/edit?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="fullName") Họ tên *
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
                value=user.fullName
            )
        div(class="form-group")
            label(for="email") Email *
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
                value=user.email
            )
        div(class="form-group")
            label(for="password") Mật khẩu *
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
                value=user.password
            )
        div(class="form-group")
            label(for="phone") Số điện thoại *
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                required
                value=user.phone
            )
        div(
            class="form-group"
            upload-image
        )
            label(for="avatar") Ảnh 
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            img(
                src=user.avatar
                upload-image-preview
                class="image-preview"
            )
            button(type='button' class='btn-close btn-close-black' button-close-image aria-label='Close')
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=(user.status == "active" ? true : false)
            )
            label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusUnactive"
                name="status"
                value="unactive"
                checked=(user.status == "unactive" ? true : false)
            )
            label(for="statusUnactive" class="form-check-label") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật