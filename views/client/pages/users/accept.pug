extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3 
        include ../../partials/list-btn-users.pug

        .row 
            .col-12 
                +box-head("Lời mời kết bạn")

        .row 
            .col-6
                each user in users
                    div(class="box-user add")
                        div(class="inner-avatar")
                            img(
                                src=(user.avatar ? user.avatar : "/images/avatar-user.png")
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullName}
                            div(class="inner-buttons")
                                button(
                                    class="btn btn-sm btn-primary mr-5"
                                    btn-accept-friend=user.id
                                ) Chấp nhận
                                button(
                                    class="btn btn-sm btn-secondary ml-5"
                                    btn-refuse-friend=user.id
                                ) Xóa
                                button(
                                    class="btn btn-sm btn-secondary ml-5"
                                    btn-deleted-friend
                                    disabled
                                ) Đã xóa
                                button(
                                    class="btn btn-sm btn-primary mr-5"
                                    btn-accepted-friend
                                    disabled
                                ) Đã chấp nhận

block script 
    script(src="/js/user.js") 