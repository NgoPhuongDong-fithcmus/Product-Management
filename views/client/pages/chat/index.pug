extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3 
        .row 
            .col-12 
                +box-head("Chat")
        
        .row 
            .col-12 
                .chat(my-id=user.id) 
                    .inner-body 
                        each chat in chats
                            div(class=(chat.user_id == user.id ? "inner-outgoing" : "inner-incoming"))
                                if(chat.user_id != user.id)
                                    .inner-name  #{chat.infoUser.fullName}
                                .inner-content 
                                    | #{chat.content}
